<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >
    <View 
        android:layout_width="match_parent"
        android:layout_marginTop="20dip"
        android:layout_height="1dip"
        android:background="#CDC9C9"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dip"
	       android:background="@drawable/imag_mobileun"/>
       
        <EditText 
            android:id="@+id/editt_id_number"
            android:layout_width="match_parent"
            android:layout_height="50dip"
            android:layout_marginLeft="10dip"
            android:background="@null"
            android:hint="请输入身份证号"/>
    </LinearLayout>
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CDC9C9"/>
    <View 
        android:layout_width="match_parent"
        android:layout_marginTop="15dip"
        android:layout_height="1dip"
        android:background="#CDC9C9"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:background="#FFFFFF"
        android:gravity="center" >

        <TextView
            android:id="@+id/textv_deal_pasww"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
           android:layout_centerVertical="true"
            android:layout_marginRight="10dip"
           
            android:text="忘记交易密码"
            android:textColor="#4876FF" />

        <EditText
            android:id="@+id/editt_dealpasww_text"
            android:layout_width="wrap_content"
            android:layout_height="50dip"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dip"
            android:layout_toLeftOf="@+id/textv_deal_pasww"
            android:layout_toRightOf="@+id/imageView1"
            android:background="@null"
            android:hint="请输入交易密码"
            android:inputType="textPassword" >
           
        </EditText>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:background="@drawable/imag_passd" />

    </RelativeLayout>
    
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:background="#CDC9C9"/>
  
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button 
            android:id="@+id/butt_register_on"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:background="@drawable/selector_register_button"
            android:textColor="#FFFFFF"
            android:textSize="18dip"
            android:text="登录"/>
    </LinearLayout>
  <!--    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">
    <TextView 
        android:id="@+id/textv_open_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dip"
        android:textColor="#4876FF"
        android:text="立即开户"/>
    </LinearLayout>
     -->
		<RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/textv_dealphone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/selector_white_button"
                    android:gravity="center"
                    android:text="客服热线：400-888-6661"
                    android:textColor="#f00" />
            </RelativeLayout>
</LinearLayout>
