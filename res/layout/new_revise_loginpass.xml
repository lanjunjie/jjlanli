<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#f2f2f2"
    android:orientation="vertical" >
<!-- 修改登录密码 -->
    <include layout="@layout/public_header" />
<View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3" />


    <EditText
        android:id="@+id/new_revise_oldloginpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入旧密码"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#fff" />

 
   

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/new_revise_logintraderpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入新密码(6-12位)"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#fff" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#D3D3D3" />
    
    <EditText
        android:id="@+id/new_revise_next_logintraderpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入新密码"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#fff" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:id="@+id/new_revise_loginaffirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_red_button"
            android:gravity="center"
            android:padding="7dp"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>

</LinearLayout>