<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >
     <include layout="@layout/public_header"/>
     <LinearLayout 
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_marginTop="15dip"
         android:gravity="center_horizontal"
         android:orientation="horizontal">
         <TextView 
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="会员卡信息验证"
             android:textSize="18dip"
             android:textColor="#FF0000"/>
     </LinearLayout>
      <View 
	        android:layout_width="match_parent"
	        android:layout_marginTop="15dip"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#FFFFFF"
	        android:gravity="center"
        android:orientation="horizontal">
	    <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="10dip"
	       android:background="@drawable/imag_cardnumber"/>
	    <EditText 
	        android:id="@+id/editt_cardnumber"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="5dip"
	        android:background="@null"
	        android:hint="请输入会员卡卡号"/>
    </LinearLayout>
    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
     <View 
	        android:layout_width="match_parent"
	        android:layout_marginTop="15dip"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#FFFFFF"
	        android:gravity="center"
        android:orientation="horizontal">
	    <ImageView 
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_marginLeft="15dip"
	       android:background="@drawable/imag_passd"/>
	    <EditText 
	        android:id="@+id/editt_passw"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="15dip"
	        android:background="@null"
	        android:hint="请输入会员卡密码"/>
    </LinearLayout>
    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:layout_marginTop="20dip"
	    android:gravity="center"
	    android:orientation="horizontal">
			<Button 
			    android:id="@+id/butt_confirmpay"
			    android:layout_width="250dip"
			    android:layout_height="50dip"
			    android:background="@drawable/selector_futures_buuton"
			    android:textColor="#FFFFFF"
			    android:text="确认"/>
	</LinearLayout>

</LinearLayout>
