<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/public_header" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="40dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="证件类型："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:text="身份证"
        android:layout_marginRight="20dp"
       />
</LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="证件号码："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    
    <EditText
        android:id="@+id/et_paperscode"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入您的证件号码"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:layout_marginRight="20dp"
       />
</LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="姓名："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    
    <EditText
        android:id="@+id/et_realname"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入您的真实姓名"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:layout_marginRight="20dp"
       />
</LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="手机号码："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    
    <EditText
        android:id="@+id/et_phonenum"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入您的手机号码"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:layout_marginRight="20dp"
       />
</LinearLayout>
   
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:gravity="right"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_checknumcode"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/main_et_bg"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:paddingLeft="20dp"
            android:textColorHint="@color/main_et_hint"
            android:textSize="15sp" 
           />

        <com.myfp.myfund.ui.view.TimeCountButton
            android:id="@+id/bt_get_checknumcode"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#F8F8F8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_gravity="right"
            android:text="获取验证码"
            android:textColor="#0000ff" />
        </LinearLayout>
   

    <Button
        android:id="@+id/bt_forget_comfirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_futures_buuton"
        android:text="下一步"
        android:textColor="#ffffff"
         />

</LinearLayout>