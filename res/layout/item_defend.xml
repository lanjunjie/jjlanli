<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dip"
    android:orientation="horizontal" >
    
    <LinearLayout 
        android:layout_weight="1"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@drawable/defend_setting1"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/t_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="false"
            android:ems="1"
            android:text="某某某某某"
            />
        
    </LinearLayout>
    <LinearLayout 
        android:layout_weight="4"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal">
            <TextView 
                android:layout_weight="1"
                android:layout_width="0dip"
                android:background="@drawable/defend_setting2"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="购买时间"/>

            <TextView
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="购买金额" />

              <TextView 
                  android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="起息时间"/>
        </LinearLayout>
         <LinearLayout
             android:layout_weight="1" 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/t_purchasing_date"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="2015/05/18"/>
             <TextView 
                 android:id="@+id/t_monetary"
                 android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="5万元"/>
              <TextView 
                  android:id="@+id/t_interest"
                  android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="2015/05/18"/>
        </LinearLayout>

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="0dip"
             android:layout_weight="1"
             android:orientation="horizontal" >

             <TextView
                 android:layout_width="0dip"
                 android:layout_height="match_parent"
                 android:background="@drawable/defend_setting2"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:text="到期时间" />

             <TextView
                 android:layout_width="0dip"
                 android:layout_height="match_parent"
                 android:background="@drawable/defend_setting2"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:text="期限" />

             <TextView
                 android:layout_width="0dip"
                 android:layout_height="match_parent"
                 android:background="@drawable/defend_setting2"
                 android:gravity="center"
                 android:layout_weight="1"
                 android:text="年化收益" />
         </LinearLayout>

         <LinearLayout 
             android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal">
            <TextView 
                android:id="@+id/t_expiration_stime"
                android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="2018/05/18"/>
             <TextView 
                 android:id="@+id/t_deadline"
                 android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="1200天"/>
              <TextView
                  android:id="@+id/t_hua_shou" 
                  android:layout_weight="1"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:background="@drawable/defend_setting2"
                android:gravity="center"
                android:text="30%"/>
        </LinearLayout>
        
    </LinearLayout>
    

</LinearLayout>
