<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_bt_normal"
    android:orientation="vertical" >

    <include layout="@layout/public_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="请选择您的银行卡"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bindingbank_banktype"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="银行卡类型："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bindingbank_banktype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/raw2right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bindingbank_bankidnum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="银行卡卡号："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bindingbank_bankidnum"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/raw2right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="支行名称"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bindingbank_province"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="请选择省份："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bindingbank_province"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/raw2right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bindingbank_city"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="请选择城市："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bindingbank_city"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/raw2right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_bindingbank_bankaccountaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/selector_white_button"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="选择开户网点："
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_bindingbank_bankaccountadress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:gravity="center_vertical" />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="15dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/raw2right" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginRight="30dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_writeifor_nextstep"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:background="@drawable/selector_red_button"
            android:text="下一步"
            android:textColor="#ffffff" />
    </LinearLayout>

</LinearLayout>