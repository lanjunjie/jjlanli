<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:padding="10dp" >

    <com.android.volley.toolbox.NetworkImageView
        android:id="@+id/imageView_selectedListItem_logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_vertical" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textView_selectedListItem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="银河主题策略（110018）" />

        <TextView
            android:id="@+id/textView_selectedListItem_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="展恒研究中心推荐" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/tv_zhRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="展恒费率" />

            <TextView
                android:id="@+id/textView_selectedListItem_rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_zhRate"
                android:text="1.5%"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/textView_selectedListItem_zhRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_zhRate"
                android:layout_toRightOf="@id/textView_selectedListItem_rate"
                android:layout_marginLeft="10dp"
                android:text="0.6%"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView_selectedListItem_rate"
                android:layout_alignParentRight="true"
                android:text="%"
                android:textColor="#f00" />

            <TextView
                android:id="@+id/textView_selectedListItem_earning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/textView_selectedListItem_rate"
                android:layout_toLeftOf="@id/textView4"
                android:text="40"
                android:textColor="#f00"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/textView_selectedListItem_rate"
                android:layout_toLeftOf="@id/textView_selectedListItem_earning"
                android:text="近一年收益" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>