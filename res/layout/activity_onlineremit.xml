<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/public_header"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="45dip"
	    android:background="#FFD306"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="5dip"
	        android:textColor="#FFFFFF"
	        android:text="为确保您在申购基金时享受点财通会员权益，请及时将会员费汇到以下帐户。"/>
	</LinearLayout>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="10dip"
	    android:orientation="vertical">
	    <TextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:textSize="16dip"
	        android:textColor="#9D9D9D"
	        android:text="点财通会员汇款帐户"/>
	   
	</LinearLayout>
	 
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="150dip"
	    android:orientation="vertical"
	    android:layout_marginTop="10dip"
	    android:background="#FFFFFF">
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
	    <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:textSize="18dip"
	            android:text="汇款帐户"/>
	        <TextView 
	            android:layout_weight="3"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:textSize="18dip"
	            android:gravity="center"
	            android:text="北京展恒基金销售有限公司"/>
	        
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:layout_marginLeft="15dip"
	        android:background="#D0D0D0"/>
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:textSize="18dip"
	            android:text="开户行"/>
	        <TextView 
	            android:layout_weight="3"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textSize="18dip"
	            android:text="交通银行北三环中路支行"/>
	        
	    </LinearLayout>
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:layout_marginLeft="15dip"
	        android:background="#D0D0D0"/>
	     <LinearLayout 
	        android:layout_width="match_parent"
	        android:layout_height="50dip"
	        android:gravity="center"
	        android:orientation="horizontal">
	        <TextView 
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:textSize="18dip"
	            android:text="账户"/>
	        <TextView 
	            android:layout_weight="3"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:textSize="18dip"
	            android:text="110060567018150065968"/>
	        
	    </LinearLayout>
	   
	</LinearLayout>
	 <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

	    <TextView
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:layout_marginTop="5dip"
	        android:text="注意:转账汇款时请注明“姓名+手机”"
	        android:textColor="#FF00"
	        android:textSize="14dip" />
	       

	</LinearLayout>
	 <View 
	        android:layout_width="match_parent"
	        android:layout_marginTop="15dip"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
    <LinearLayout 
        android:id="@+id/layot_pahtpay"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="#FFFFFF"
        android:gravity="center"
        android:orientation="horizontal">
	    
        <TextView 
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="20dip"
	            android:textSize="18dip"
	            android:text="会员服务热线"/>
	        <TextView 
	            android:layout_weight="1"
	            android:layout_width="0dip"
	            android:layout_height="wrap_content"
	            android:gravity="right"
	            android:layout_marginRight="5dip"
	            android:textSize="18dip"
	            android:text="010-56236260"/>
	        <ImageView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="15dip"
	            android:background="@drawable/raw2right"/>
    </LinearLayout>
    <View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
    <LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:layout_marginTop="20dip"
	    android:gravity="center"
	    android:orientation="horizontal">
			<Button 
			    android:id="@+id/butt_onlineremitpay"
			    android:layout_width="250dip"
			    android:layout_height="50dip"
			    android:background="@drawable/selector_futures_buuton"
			    android:textColor="#FFFFFF"
			    android:text="确定"/>
	</LinearLayout>

</LinearLayout>
