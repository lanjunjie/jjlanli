<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical" >
	<!-- 登录界面 -->

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:layout_margin="10dp"
         >

          <RadioGroup
                android:id="@+id/radiolg"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_alignParentTop="true"
                android:orientation="horizontal" >
        
        
         <RadioButton 
             android:id="@+id/new_radio_account"
             android:layout_weight="1"
           android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/item_new_deallogin"
            android:checked="true"
            android:button="@null"
            android:gravity="center"
            />

         <RadioButton
             android:id="@+id/new_radio_deal"
             android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="fill_parent"
            android:background="@drawable/item_new_login"
             android:checked="true"
             android:button="@null"
             android:gravity="center"
              />
         </RadioGroup>

    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
        
    </android.support.v4.view.ViewPager>
    
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       
      android:layout_marginLeft="20dp"
      android:layout_marginRight="20dp"
      android:layout_marginTop="15dp"
      android:layout_marginBottom="10dp"
       >

        <TextView
            android:id="@+id/new_text_affirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           
            android:background="@drawable/selector_red_button"
            android:gravity="center"
            android:padding="7dp"
            android:text="确认"
            android:textColor="#fff"
            android:textSize="20sp" />

    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        
        android:paddingRight="20dp">
        <TextView android:id="@+id/new_text_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#0000ff"
            android:text="立即注册"
            android:background="@drawable/selector_white_button"/>
    </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/new_text_dealphone"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/selector_white_button"
                    android:gravity="center"
                    android:text="客服热线：400-888-6661"
                    android:textColor="#f00" />

            </RelativeLayout>


</LinearLayout>