<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <include layout="@layout/public_header" />
      <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="15dp"
                    android:text="撤单确认  您确定要进行以下撤单吗？"
                    android:textColor="#838383"
                    android:textSize="15sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/main_et_hint" >
            </LinearLayout>
              <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="原申请单编号:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_cancellationconfirm_oldapplycode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjdkfjeifjdkl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="基金名称:"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_cancellationconfirm_fundCode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="[000009]"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/tv_cancellationconfirm_fundName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="易方达天天理财货币A"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

          

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="委托份额:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_cancellationconfirm_fene"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjdkfjeifjdkl" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="委托金额:"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_cancellationconfirm_jine"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjdkfjeifjdkl" />
            </LinearLayout>


         
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="#f8f8f8"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="业务类别:"
                    android:textSize="18sp" />
                
                <TextView
                    android:id="@+id/tv_cancellationconfirm_yewu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="fjdkfjeifjdkl" />

              
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="40dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/bt_applycancellation"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/selector_red_button"
                    android:text="确定"
                    android:textColor="#ffffff" />
            </LinearLayout>
            
            
            
      <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:text="温馨提示"
            android:textColor="#838383"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="请仔细核对您的撤单申请" />
    </LinearLayout>
        </LinearLayout>
    </ScrollView>
    
    

</LinearLayout>
