<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >
    
    <include layout="@layout/public_header"/>
    
    
    <EditText
        android:id="@+id/et_mobile"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入新的手机号码"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_checknum"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/main_et_bg"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColorHint="@color/main_et_hint"
            android:textSize="15sp" />

        <com.myfp.myfund.ui.view.TimeCountButton
            android:id="@+id/bt_get_checknum"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:background="@drawable/selector_red_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="#ffffff" />
    </LinearLayout>

    <Button
        android:id="@+id/bt_changeMobile_confirm"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_red_button"
        android:text="确  定"
        android:textColor="#ffffff" />
    
    

</LinearLayout>
