<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical" >
    <include layout="@layout/public_header" />

    <LinearLayout 
        android:layout_weight="1.5"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:background="@drawable/ba_grand"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="5dip"
        android:layout_marginTop="8dip"
        android:orientation="vertical">
        <TextView 
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="center"
            android:text="您已累计节省申购费"/>
        <TextView 
            android:id="@+id/tev_moneysum"
            android:layout_weight="2"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_marginBottom="18dip"
            android:gravity="center"
            android:textColor="#FF5151"
            android:textSize="22dip"
            android:text="999999.99元"/>
        <LinearLayout 
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="horizontal">
             <LinearLayout 
                 android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:text="已提现申购费:"/>
            <TextView 
                android:id="@+id/tex_has_been"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:text="1000000.00"/>
            
        </LinearLayout>
          <LinearLayout 
              android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:text="可提现金额:"/>
            <TextView 
                android:id="@+id/tex_Khunti"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14dip"
                android:text="1.00"/>
            
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout 
        android:id="@+id/lan_member"
        android:layout_weight="3"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="horizontal"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="3dip"
        android:gravity="center"
        >
       
    </LinearLayout>
    <LinearLayout 
        android:layout_weight="2"
        android:layout_width="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_height="0dip"
        android:orientation="vertical">
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText 
            android:id="@+id/edi_import_cash"
            android:layout_width="match_parent"
            android:numeric="integer"
            android:layout_height="30dip"
            android:layout_gravity="center_vertical"
            android:hint="请您输入需要提现的金额"
            android:background="@drawable/ba_import"/>
      
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout 
            android:layout_weight="4"
            android:layout_marginTop="5dip"
            android:layout_width="0dip"
            android:layout_height="40dip"
            android:orientation="horizontal">
        <Spinner 
            android:id="@+id/sp_ne"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
        </LinearLayout>
        <TextView 
            android:id="@+id/present_button"
            android:layout_weight="1"
            android:layout_width="0dip"
            android:layout_height="35dip"
            android:layout_marginLeft="5dip"
            android:layout_marginRight="15dip"
            android:layout_marginTop="5dip"
            android:gravity="center"
            android:text="提现"
            android:textColor="#ffffff"
            android:background="@drawable/selector_red_button"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:orientation="horizontal">
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FF5151"
        android:textSize="18dip"
        android:text="注:"/>
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请确保每笔提现金额在100元-800元之间;"/>
	</LinearLayout>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="如果提现低于100，需累计满100元后进行提现;"/>
	<TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:text="如果提现金额超过800，需累分期进行提现。"/>
	</LinearLayout>

</LinearLayout>
