<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical" >
    <include layout="@layout/public_header" />
	
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="25dip"
        android:layout_marginTop="25dip"
        android:gravity="center"
        android:orientation="horizontal">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="加入点融通会员,资格认证"/>
    </LinearLayout>
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:orientation="vertical">
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
             android:autoLink="email"
            android:textSize="16sp"
            android:textColor="#9D9D9D"
            android:text="    请提交(具备2年以上的股票或公募基金投资经念)的证明文件和身份证正反面信息，发送至邮箱:service@myfund.com,或者登陆PC端进行登陆上传,工作人员将在两个工作日内与您确认审核结果,请您耐心等候。"/>
      	<TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
             android:autoLink="email|phone"
            android:textSize="16sp"
            android:textColor="#9D9D9D"
            android:text="如有问题,请咨询:010-56236258"/>
      	<TextView 
      	    android:id="@+id/tex_z"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.2"
            android:layout_marginTop="5dip"
            android:textSize="16sp"
            android:textColor="#9D9D9D"
            android:text=""/>
    </LinearLayout>
    
     <View 
	        android:layout_width="match_parent"
	        android:layout_marginTop="20dip"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
	<LinearLayout 
	    android:id="@+id/tex_k"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#FFFFFF"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_weight="3"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:textSize="18dip"
	        android:text="证券帐户卡"/>
	    <ImageView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:src="@drawable/raw2right"
	        android:layout_height="wrap_content"
	        />
	</LinearLayout>
	<View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:layout_marginLeft="15dip"
	        android:background="#D0D0D0"/>
	<LinearLayout 
	    android:id="@+id/tex_m"
	    android:layout_width="match_parent"
	    android:layout_height="50dip"
	    android:background="#FFFFFF"
	    android:gravity="center"
	    android:orientation="horizontal">
	    <TextView 
	        android:layout_weight="3"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:textSize="18dip"
	        android:text="基金开户证明"/>
	   
	    <ImageView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"
	        />
	</LinearLayout>
	<View 
	        android:layout_width="match_parent"
	        android:layout_height="1dip"
	        android:background="#D0D0D0"/>
 
</LinearLayout>
