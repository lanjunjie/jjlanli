<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_manager_fundname"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="基金简称"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_manager_fundmanager"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="基金经理"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_manager_equity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="最新净值"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_manager_equitydate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="日期"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_manager_jinnianyilai"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="今年以来收益率"
        android:textColor="@color/red_bt_normal"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_manager_jinyinian"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/red_bt_normal"
        android:text="近一年收益率"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <TextView
        android:id="@+id/tv_manager_createdate"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="成立日期"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/main_et_hint" >
    </LinearLayout>



</LinearLayout>