<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff" 
    android:orientation="vertical" >
    <!-- android:background="#f2f2f2" -->
    <include layout="@layout/public_header" />
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:paddingTop="30dp"
         android:background="#fff"
        >
<ImageView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="10dp"
    android:background="@drawable/code"/>
        <EditText
            android:id="@+id/shortcut_register_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:hint="验证码"
            android:padding="10dp"
            android:textSize="18sp"
            android:background="#fff" />
	<View android:layout_width="1dp"
    android:layout_height="15dp"
    android:layout_gravity="center"
    android:background="#D3D3D3"/>
        <com.myfp.myfund.ui.view.TimeCountButton
            android:id="@+id/shortcut_register_gaincode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="13sp"
            android:text="获取验证码"
            android:textColor="#0000ff" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="35dp"
        android:background="#D3D3D3" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button 
            android:id="@+id/shortcut_nextonebu"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:background="@drawable/selector_register_button"
            android:textColor="#FFFFFF"
            android:textSize="18dip"
            android:text="下一步"/>
    </LinearLayout>
   
</LinearLayout>
