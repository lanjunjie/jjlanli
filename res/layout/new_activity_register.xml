<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#f2f2f2"
    android:orientation="vertical" >
	<!-- 注册页面 -->
    <include layout="@layout/public_header" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/new_register_phone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入手机号"
        android:padding="10dp"
        android:paddingLeft="20dp"
        android:textSize="18sp"
        android:background="#fff" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        >

        <EditText
            android:id="@+id/new_register_code"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:hint="请输入验证码"
            android:padding="10dp"
            android:textSize="18sp"
            android:background="#fff" />

        <com.myfp.myfund.ui.view.TimeCountButton
            android:id="@+id/new_register_gaincode"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/selector_white_button"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            android:text="获取验证码"
            android:textColor="#0000ff" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/new_register_password"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请输入登录密码(6-12位)"
        android:inputType="textPassword"
        android:maxLength="12"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#fff" />
    
    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="15dp"
        android:background="#D3D3D3" />

    <EditText
        android:id="@+id/new_register_nextpassword"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="请再次输入登录密码"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textSize="18sp"
        android:background="#fff" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#D3D3D3" />
    

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp" >

        <TextView
            android:id="@+id/new_register_affirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_red_button"
            android:gravity="center"
            android:padding="7dp"
            android:text="完成注册"
            android:textColor="#fff"
            android:textSize="20sp" />


    </LinearLayout>
     <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal" >

        <CheckBox
            android:id="@+id/cb_fund_readed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我已阅读并同意相关"
            android:textColor="#434343" />
        <TextView 
            android:id="@+id/tv_fund_clause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="#f00"
            android:text="服务条款"/>
    </LinearLayout>

</LinearLayout>