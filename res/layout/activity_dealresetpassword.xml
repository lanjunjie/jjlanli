<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <include layout="@layout/public_header" />
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="20dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="新密码："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    <EditText
        android:id="@+id/et_newpass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入您的新密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:maxLength="8"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:layout_marginRight="20dp"
       />
       />
</LinearLayout>
 <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:background="@color/main_et_bg"
        android:orientation="horizontal">
        <TextView
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:text="确认密码："
            android:textSize="15sp"
            android:gravity="center_vertical"/>
    
    <EditText
        android:id="@+id/et_newpassagain"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="再次输入新密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
         android:maxLength="8"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" 
        android:layout_marginRight="20dp"
       />
</LinearLayout>
   
    <Button
        android:id="@+id/bt_nextstep"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_red_button"
        android:text="下一步"
        android:textColor="#ffffff" />
    

</LinearLayout>
