<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0"
    android:orientation="vertical" >
     <include layout="@layout/public_header" />
     <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:scrollbars="none" >

     <LinearLayout
        
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/layout_rukou"
        android:layout_width="match_parent"
        android:layout_height="180dip"
        android:background="@drawable/new_imgebj"
        android:orientation="vertical" >
    <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="0.5"
            android:gravity="center_vertical"
            android:orientation="horizontal">
	<TextView 
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_marginTop="5dip"
	    android:layout_marginLeft="3dip"
	    android:textColor="#FFFFFF"
	    android:textSize="18dip"
	    android:text="总资产(元)"/>
	</LinearLayout>
	<LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">
        <TextView 
            android:id="@+id/txt_general_assets"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dip"
            android:textColor="#FFFFFF"
            android:text="0.00"/>
	</LinearLayout>

	<LinearLayout 
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:orientation="horizontal">
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="55dip"
	        android:gravity="center"
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:textSize="16dip"
	            android:text="总浮动盈亏(元)"/>
	        <TextView 
	            android:id="@+id/txt_profit_andloss"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:textSize="27dip"
	            android:text="0.00"/>
	        
	    </LinearLayout>
	    
	    <LinearLayout 
	        android:layout_width="0dip"
	        android:layout_weight="1"
	        android:layout_height="55dip"
	        android:gravity="center"
	       
	        android:orientation="vertical">
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:textSize="16dip"
	            android:text="总收益率"/>
	        <TextView 
	            android:id="@+id/txt_earnings"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textColor="#FFFFFF"
	            android:textSize="27dip"
	            android:text="0.00"/>
	    </LinearLayout>
	    
	</LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF"
        android:layout_marginTop="15dip"
        android:orientation="vertical" >
	<LinearLayout 
	    android:id="@+id/lay_optional"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_optional"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="自选基金"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
	<LinearLayout 
	    android:id="@+id/lay_free_subscription"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_avoid"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="免申购费"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
	<LinearLayout 
	    android:id="@+id/lay_feature"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_feature"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="特色固收"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
	<LinearLayout 
	    android:id="@+id/lay_sunshine_placement"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_sunshine"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="阳光私募"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
    <LinearLayout 
        android:id="@+id/lay_fund_fintheircing"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_fund"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="基金配资"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
	<LinearLayout 
	    android:id="@+id/lay_personal_tailor"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_private"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="私人订制"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:layout_marginLeft="15dip"
	    android:background="#999999"/>
	<LinearLayout 
	    android:id="@+id/lay_my_coupon"
	    android:layout_width="match_parent"
	    android:layout_height="60dip"
	    android:gravity="center_vertical"
	    android:orientation="horizontal">
	    <ImageView 
	        android:layout_weight="0.2"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="15dip"
	        android:src="@drawable/new_my"/>
	    <TextView 
	        android:layout_weight="1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:textSize="16dip"
	        android:text="我的优惠券"/>
	    <ImageView 
	        android:layout_weight="0.1"
	        android:layout_width="0dip"
	        android:layout_height="wrap_content"
	        android:src="@drawable/raw2right"/>
	</LinearLayout>
	<View 
	    android:layout_width="match_parent"
	    android:layout_height="0.5dip"
	    android:background="#999999"/>

    </LinearLayout>
    </LinearLayout>
	</ScrollView>

</LinearLayout>
