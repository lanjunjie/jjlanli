<?xml version="1.0" encoding="utf-8"?>
<TabHost xmlns:android="http://schemas.android.com/apk/res/android"
     	android:id="@android:id/tabhost"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@android:id/tabcontent"
            android:layout_width="fill_parent"
            android:layout_height="0.0dip"
            android:layout_weight="1.0" />

        <TabWidget
            android:id="@android:id/tabs"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/main_radio"
            android:layout_width="fill_parent"
            android:layout_height="50dip"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:orientation="horizontal" >
            
           

            <RadioButton
                android:id="@+id/menu_tab_home"
                android:layout_height="50dip"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:button="@null"
                android:checked="true"
                android:drawableTop="@drawable/item_home"
				android:text="首页"
				android:gravity="center_horizontal"
                android:tag="home" />
 
			
            <RadioButton
                android:id="@+id/menu_tab_info"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="50dip"
                android:drawableTop="@drawable/item_info"
                android:text="资讯"
                android:gravity="center_horizontal"
                android:button="@null"
                android:tag="info" />
            
            <RadioButton
                android:id="@+id/menu_tab_tadre"
                android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="50dip"
				android:drawableTop="@drawable/item_tadre"
				android:text="交易"
				android:gravity="center_horizontal"
                android:button="@null"
                android:tag="tadre" />
           

            <RadioButton
                android:id="@+id/menu_tab_my"
                 android:layout_width="0dip"
                android:layout_weight="1"
                android:layout_height="50dip"
                android:drawableTop="@drawable/item_my"
                android:text="我的"
                android:gravity="center_horizontal"
                android:button="@null"
                android:tag="my" />

           
        </RadioGroup>
    </LinearLayout>

</TabHost>
