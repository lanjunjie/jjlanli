<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/public_header" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="快速查询：" />

        <EditText
            android:id="@+id/et_accountaddress_search"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/et"
            android:paddingLeft="5dp"
            android:singleLine="true"
            android:textSize="15sp" />

        <Button
            android:id="@+id/bt_accountaddress_search"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/selector_red_button"
            android:gravity="center"
            android:text="查询"
            android:textColor="@color/white_bt_normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/main_et_hint" >
    </LinearLayout>

    <ListView
        android:id="@+id/list_accountaddress"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

</LinearLayout>