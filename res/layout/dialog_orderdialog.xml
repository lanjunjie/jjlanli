<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/imag_popup"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="产品预约"
        android:textColor="@color/red_bt_normal"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="尊敬的客户 "
            android:textColor="#282829"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_orderdialog_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#282829"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="您正在预约："
            android:textColor="#000000"
            android:textSize="18sp" />
         <TextView
            android:id="@+id/tv_orderdialog_proname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#f21d1d"
            android:textSize="18sp" />
    </LinearLayout>

   

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请确认您的手机号："
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="10dip"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_orderdialog_phonenum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_orderdialog_changephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_button"
            android:focusable="false"
            android:text="点此修改"
            android:textSize="18sp"
            android:textColor="#0400fd" />
    </LinearLayout>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dip"
        android:layout_marginTop="10dip"
        android:text="客服人员将在24小时内与您联系！"
        android:textColor="#000000"
        android:textSize="18sp"
         />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="27dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客服热线："
            android:textSize="18sp"
            android:textColor="#000000" />

        <TextView
            android:id="@+id/tv_orderdialog_kefu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_white_button"
            android:focusable="false"
            android:text="400-888-6661"
            android:textSize="18sp"
            android:textColor="@color/red_bt_normal" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/main_et_hint" >
    </View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		
          <TextView
            android:id="@+id/tv_orderdialog_orderlater"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:text="稍后预约"
            android:textColor="@color/main_et_hint"
            android:textSize="18sp" />
      
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/main_et_hint" >
        </View>
          <TextView
            android:id="@+id/tv_orderdialog_ordernow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:focusable="false"
            android:gravity="center"
            android:text="立即预约"
            android:textColor="@color/red_bt_normal"
            android:textSize="18sp" />
          
    </LinearLayout>

</LinearLayout>