<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="#fff" 
    android:orientation="vertical" >
<!-- android:background="#f2f2f2" -->>
    <include layout="@layout/public_header" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:background="#fff"
         android:paddingTop="30dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/suo" />

        <EditText
            android:id="@+id/shortcut_register_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="6-12位登录密码"
            android:inputType="textPassword"
            android:maxLength="12"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="37dp"
        android:background="#D3D3D3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
         android:background="#fff"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@drawable/suo" />

        <EditText
            android:id="@+id/shortcut_register_nextpassword"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:hint="再次输入登录密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="18sp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="37dp"
        android:background="#D3D3D3" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="50dip"
        android:layout_marginTop="10dip"
        android:gravity="center"
        android:orientation="vertical"
        >
        <Button 
            android:id="@+id/shortcut_register_affirm"
            android:layout_width="300dip"
            android:layout_height="40dip"
            android:background="@drawable/selector_register_button"
            android:textColor="#FFFFFF"
            android:textSize="20dip"
            android:text="完成注册"/>
    </LinearLayout>


</LinearLayout>