<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bg_color"
    android:orientation="vertical" >

    <include layout="@layout/public_header" />
	<View android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginTop="40dp"
	    android:background="#CDC9C9"/>
    <EditText
        android:id="@+id/et_mobile1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
      
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入手机号码"
        android:inputType="phone"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" />
<View android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	  	android:layout_marginLeft="15dp"
	    android:background="#CDC9C9"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
     
        android:orientation="horizontal" >

        <EditText
            android:id="@+id/et_checknum1"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@color/main_et_bg"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:inputType="phone"
            android:paddingLeft="20dp"
            android:textColorHint="@color/main_et_hint"
            android:textSize="15sp" />

        <com.myfp.myfund.ui.view.TimeCountButton
            android:id="@+id/bt_get_checknum1"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="#F8F8F8"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="获取验证码"
            android:textColor="#0000ff" />
    </LinearLayout>
    <View android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	  	android:layout_marginLeft="15dp"
	    android:background="#CDC9C9"/>
<EditText
        android:id="@+id/et_pass1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
    
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="请输入登录密码(6-12位)"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" />
<View android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	  	android:layout_marginLeft="15dp"
	    android:background="#CDC9C9"/>
    <EditText
        android:id="@+id/et_repass1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       
        android:background="@color/main_et_bg"
        android:gravity="center_vertical"
        android:hint="再次输入登录密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColorHint="@color/main_et_hint"
        android:textSize="15sp" />
    <View android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	  
	    android:background="#CDC9C9"/>
    <Button
        android:id="@+id/but_reg"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:background="@drawable/selector_futures_buuton"
        android:text="确  定"
        android:textColor="#ffffff" />

</LinearLayout>